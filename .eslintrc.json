{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["airbnb-base", "prettier"],
    "plugins": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prettier/prettier": "error",
        "no-console": "off",
        "linebreak-style": ["error", "windows"],
        "consistent-return": "warn",
        "func-name-matching": "off",
        "func-names": "off",
        "no-shadow": "off",
        "no-unused-expressions": "off",
        "no-unused-vars": "warn",
        "prefer-template": "off",
        "no-else-return": "off"
    }
}